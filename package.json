{
  "name": "@relaycorp/relaynet-pong",
  "version": "1.0.0a1",
  "main": "build/main/index.js",
  "scripts": {
    "prebuild": "run-s clean",
    "build": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s static-checks test:unit",
    "test:unit": "jest --coverage --detectOpenHandles",
    "test:unit:changed": "run-s \"test:unit -- -o\"",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "tslint --project .",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:ci:unit": "run-s build test:ci:unit:jest",
    "test:ci:unit:jest": "jest --config jest.config.ci.js --coverage --detectOpenHandles",
    "test:functional": "jest --config src/functional_tests/jest.config.js --runInBand --detectOpenHandles",
    "cov": "run-s build test:unit && opn coverage/lcov-report/index.html",
    "clean": "trash build test"
  },
  "engines": {
    "node": ">=16"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "license": "AGPL-3.0",
  "homepage": "https://docs.relaycorp.tech/relaynet-pong/",
  "dependencies": {
    "@fastify/url-data": "^5.1.0",
    "@keyv/redis": "^2.3.8",
    "@relaycorp/awala-keystore-cloud": "^2.0.14",
    "@relaycorp/pino-cloud": "^1.0.20",
    "@relaycorp/relaynet-core": "^1.81.10",
    "@relaycorp/relaynet-pohttp": "^1.7.50",
    "buffer-to-arraybuffer": "0.0.6",
    "bull": "^4.8.5",
    "date-fns": "^2.29.1",
    "env-var": "^7.1.1",
    "fastify": "^4.3.0",
    "is-valid-domain": "^0.1.6",
    "keyv": "^4.3.0",
    "make-promises-safe": "^5.1.0",
    "pino": "^8.3.1",
    "uuid4": "^2.0.2",
    "verror": "^1.10.1"
  },
  "devDependencies": {
    "@relaycorp/relaynet-testing": "^2.2.25",
    "@relaycorp/shared-config": "^1.9.1",
    "@types/bull": "^3.15.9",
    "@types/jest": "^28.1.6",
    "@types/split2": "^3.2.1",
    "@types/verror": "^1.10.6",
    "jest": "^28.1.3",
    "jest-extended": "^2.0.0",
    "light-my-request": "^5.3.0",
    "mockserver-client": "^5.13.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "split2": "^4.1.0",
    "trash-cli": "^5.0.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.7.4"
  }
}

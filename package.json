{
  "name": "awala-pong",
  "version": "1.0.0",
  "type": "module",
  "files": [
    "build"
  ],
  "scripts": {
    "prebuild": "run-s clean",
    "build": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier . --write",
    "fix:eslint": "eslint --fix src",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "eslint src",
    "static-checks:prettier": "prettier . --list-different",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:functional": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config src/functionalTests/jest.config.mjs --runInBand --detectOpenHandles",
    "clean": "del-cli build test coverage",
    "start": "skaffold dev"
  },
  "dependencies": {
    "@relaycorp/awala-endpoint-internet": "^1.1.0",
    "@relaycorp/cloudevents-transport": "^1.3.9",
    "@relaycorp/pino-cloud": "^1.0.28",
    "cloudevents": "^8.0.0",
    "env-var": "^7.3.0",
    "fastify": "4.21.0",
    "fastify-plugin": "^4.5.0",
    "pino": "^8.15.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.3",
    "@relaycorp/eslint-config": "^1.1.134",
    "@relaycorp/shared-config": "^1.14.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@types/split2": "^4.2.0",
    "del-cli": "^5.0.0",
    "get-port": "^7.0.0",
    "jest": "^29.6.3",
    "jest-extended": "^4.0.1",
    "mockserver-client": "^5.15.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "split2": "^4.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "eslintConfig": {
    "extends": "@relaycorp"
  }
}

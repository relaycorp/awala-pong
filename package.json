{
  "name": "@relaycorp/relaynet-pong",
  "version": "1.0.0a1",
  "description": "Relaynet Pong Service",
  "main": "build/main/index.js",
  "scripts": {
    "prebuild": "run-s clean",
    "build": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s static-checks test:unit",
    "test:unit": "jest --coverage",
    "test:unit:changed": "run-s \"test:unit -- -o\"",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "tslint --project .",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:ci:unit": "run-s build test:ci:unit:jest",
    "test:ci:unit:jest": "jest --config jest.config.ci.js --coverage",
    "test:functional": "run-s build test:functional:docker",
    "test:functional:docker": "./src/functional_tests/run.sh",
    "cov": "run-s build test:unit && opn coverage/lcov-report/index.html",
    "clean": "trash build test"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@relaycorp/shared-config": "^1.4.1",
    "@types/binary-parser": "^1.5.0",
    "@types/bull": "^3.14.2",
    "@types/jest": "^26.0.12",
    "@types/pino": "^6.3.0",
    "@types/pkijs": "0.0.4",
    "@types/verror": "^1.10.4",
    "axios": "^0.20.0",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "stubborn-ws": "^5.2.0",
    "trash-cli": "^1.4.0",
    "ts-jest": "^24.3.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/relaycorp/relaynet-pong.git"
  },
  "keywords": [
    "relaynet"
  ],
  "author": {
    "email": "no-reply@relaycorp.tech",
    "name": "Relaycorp, Inc.",
    "url": "https://relaycorp.tech/"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/relaycorp/relaynet-pong/issues"
  },
  "homepage": "https://docs.relaycorp.tech/relaynet-pong/",
  "dependencies": {
    "@relaycorp/keystore-vault": "^1.1.4",
    "@relaycorp/relaynet-core": "^1.30.0",
    "@relaycorp/relaynet-pohttp": "^1.5.0",
    "binary-parser": "^1.6.2",
    "buffer-to-arraybuffer": "0.0.5",
    "bull": "^3.18.0",
    "env-var": "^6.3.0",
    "fastify": "^3.3.0",
    "fastify-sentry": "^1.4.0",
    "fastify-url-data": "^2.4.0",
    "make-promises-safe": "^5.1.0",
    "pino": "^6.6.0",
    "uuid4": "^2.0.2"
  }
}
